@page
@model TechChallenge.Interface.Pages.Contatos.DeleteModel

@{
    ViewData["Title"] = "Remover";
}

<h1>Remover contato</h1>

<h3>Tem certeza de que deseja remover?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato.DDD)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.DDD.NrDDD)
        </dd>
        <dt class="col-sm-2">
            Telefone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.NrTelefone)
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Contato.Id" />
        <a asp-page="./Index">Voltar para lista de contatos</a><br />
        <input type="submit" value="Delete" class="btn btn-danger my-3" /> 
    </form>
</div>
