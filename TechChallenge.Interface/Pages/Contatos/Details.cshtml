@page
@model TechChallenge.Interface.Pages.Contatos.DetailsModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do contato</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato.DDD)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.DDD.NrDDD)
        </dd>
        <dt class="col-sm-2">
            Telefone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.NrTelefone)
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Contato.Id">Editar contato</a><br />
    <a asp-page="./Index">Voltar para lista de contatos</a>
</div>
